@page
@model CreateModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Contact Form";
}

<h1 class="my-4 text-center text-gold">Contact Us</h1>

@if (TempData["SuccessMessage"] != null) 
{
    <div class="alert text-center py-5 shadow-sm m-5">
        <h4>Thank you for reaching out to us!</h4>
        <p>One of our lawyers will contact you shortly to discuss your inquiry.</p>
    </div>
}
else
{
    <h4 class="text-muted text-center mb-4">We'd love to hear from you! Fill out the form below, and we’ll get back to you shortly.</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="p-4 border rounded shadow-sm bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Form.Email" class="form-label fw-bold">Your Email Address <span class="text-danger">*</span></label>
                    <input asp-for="Form.Email" class="form-control" placeholder="example@email.com" />
                    <span asp-validation-for="Form.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Form.Content" class="form-label fw-bold">Your Message <span class="text-danger">*</span></label>
                    <textarea asp-for="Form.Content" class="form-control" rows="5" placeholder="Write your message here..."></textarea>
                    <span asp-validation-for="Form.Content" class="text-danger"></span>
                </div>


                <div class="form-group d-grid">
                    <input type="submit" value="Send Message" class="create-form btn-lg" />
                </div>
            </form>


        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
