@inject LawFirmCMS.Data.ApplicationDbContext DbContext

@{
    var customPages = DbContext.CustomPages
        .Select(cp => new { cp.Title, cp.Path })
        .ToList();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LawFirmCMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LawFirmCMS.styles.css" asp-append-version="true" />
</head>
<body>
   <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <img class="navbar-brand" asp-area="" asp-page="/Index" width="15%" height="15%" src="~/img/Logo.png">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (customPages.Any())
                    {
                        foreach (var pageData in customPages)
                        {
                            <li class="nav-item">
                    <a class="nav-link text-dark" asp-page="/Customer/DynamicPage" asp-route-slug="@pageData.Title">@pageData.Title</a>

                                </li>
                        }
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="nav-link text-muted">No pages available</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - LawFirmCMS - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
