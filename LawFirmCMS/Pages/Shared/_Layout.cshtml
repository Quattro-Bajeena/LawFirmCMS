@inject LawFirmCMS.Data.ApplicationDbContext DbContext

@{
    var customPages = DbContext.CustomPages
        .Select(cp => new { cp.Title, cp.Path })
        .ToList();
}

<!DOCTYPE html>
<html lang="en" ="">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LawFirmCMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/LawFirmCMS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>
    <div class="site-wrapper">
        <header class="site-header">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        <img src="~/img/Logo.png" alt="Logo" width="150">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            @if (customPages.Any())
                            {
                                foreach (var pageData in customPages)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-page="/Customer/DynamicPage" asp-route-slug="@pageData.Title">@pageData.Title</a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-muted">No pages available</span>
                                </li>
                            }
                        </ul>

                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Customer/Posts/Index">Publications</a>
                        </li>

                        <a asp-page="/Customer/Forms/Create" class="nav-link contact-us-link ms-3">Contact Us</a>
                    </div>
                </div>
            </nav>
        </header>




        <div class="content-wrapper">
            <main role="main">
                @RenderBody()
            </main>
        </div>

        <footer class="bg-dark text-white py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p>&copy; 2024 - LawFirmCMS. All Rights Reserved.</p>
                    </div>
                    <div class="col-md-6 text-end">
                        <a asp-area="" asp-page="/Privacy" class="text-white">Privacy Policy</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/custom.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
