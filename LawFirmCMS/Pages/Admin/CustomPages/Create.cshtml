@page
@model LawFirmCMS.Pages.Admin.Pages.CreateModel
@{
    Layout = "~/Pages/Admin/Shared/_AdminLayout.cshtml";
}

<p>Create a new page:</p>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Title:</label>
        <input asp-for="Page!.Title" />
    </div>
    <div class="mb-3">
        <label class="form-label">Path:</label>
        <input asp-for="Page!.Path" />
    </div>

    @if (!Model.Page.IsGroup)
    {
        <div class="mb-3">
            <label class="form-label">Parent page</label>
            <select asp-for="Page!.ParentId" class="form-select">
                <option value="">None</option>
                @foreach (var groupPage in Model.GroupPages)
                {
                    <option value="@groupPage.Id">@groupPage.Title</option>
                }
            </select>
        </div>
    }

    <input class="btn btn-primary" type="submit" />
</form>


