@model LawFirmCMS.Pages.Admin.Employees.DetailsModel
@inject LawFirmCMS.Services.AccountService AccountService
@{
    Layout = "~/Pages/Admin/Shared/_AdminLayout.cshtml";
}
@{
    ViewData["Title"] = "Details";
    ViewData["NavigationEmployees"] = "active";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Login)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Login)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Boss)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Boss)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.IsDeleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.IsDeleted)
        </dd>
    </dl>
</div>
<div>
    @if (AccountService.IsBoss() || AccountService.LoggedId() == Model.Employee.Id){
        <a asp-page="./Edit" asp-route-id="@Model.Employee.Id">Edit</a>
        <div class="vr"></div>
    }
    
    <a asp-page="./Index">Back to List</a>
</div>
