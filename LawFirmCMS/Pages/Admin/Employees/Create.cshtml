@page
@model LawFirmCMS.Pages.Admin.Employees.CreateModel
@{
    Layout = "~/Pages/Admin/Shared/_AdminLayout.cshtml";
}
@{
    ViewData["Title"] = "Create";
    ViewData["NavigationEmployees"] = "active";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div >
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Employee.Login" class="control-label"></label>
                <input asp-for="Employee.Login" class="form-control" />
                <span asp-validation-for="Employee.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Employee.Name" class="control-label"></label>
                <input asp-for="Employee.Name" class="form-control" />
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Employee.Surname" class="control-label"></label>
                <input asp-for="Employee.Surname" class="form-control" />
                <span asp-validation-for="Employee.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Expertise" class="control-label"></label>
                <textarea asp-for="Employee.Expertise" class="form-control" ></textarea>
                <span asp-validation-for="Employee.Expertise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="fileInput" class="control-label">Upload Image</label>
                <input type="file" name="fileInput" id="fileInput" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <span class="text-danger">*</span>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Employee.Boss" /> @Html.DisplayNameFor(model => model.Employee.Boss)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
