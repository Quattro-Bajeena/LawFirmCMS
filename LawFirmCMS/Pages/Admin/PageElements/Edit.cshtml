@page
@model LawFirmCMS.Pages.Admin.PageElements.EditModel
@{
    Layout = "~/Pages/Admin/Shared/_AdminLayout.cshtml";
}
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PageElement</h4>
<hr />
<div class="row">
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PageElement.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="PageElement.Type" class="control-label"></label>
                <select asp-for="PageElement.Type" class="form-control" asp-items="ViewBag.Type"></select>
                <span asp-validation-for="PageElement.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageElement.Order" class="control-label"></label>
                <input asp-for="PageElement.Order" class="form-control" />
                <span asp-validation-for="PageElement.Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageElement.TextData" class="control-label"></label>
                <textarea asp-for="PageElement.TextData" class="form-control"></textarea>
                <span asp-validation-for="PageElement.TextData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="fileInput" class="control-label">Upload Image</label>
                <input type="file" name="fileInput" id="fileInput" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <span class="text-danger">*</span>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PageElement.IsDeleted" /> @Html.DisplayNameFor(model => model.PageElement.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PageElement.PageId" class="control-label"></label>
                <select asp-for="PageElement.PageId" class="form-control" asp-items="ViewBag.PageId"></select>
                <span asp-validation-for="PageElement.PageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
    <script>
        console.log(CKEDITOR.version);
        CKEDITOR.replace('PageElement_TextData', {
            height: 300,
            toolbar: [
                { name: 'basicstyles', items: ['Bold', 'Italic', 'Underline'] },
                { name: 'paragraph', items: ['NumberedList', 'BulletedList'] },
                { name: 'links', items: ['Link', 'Unlink'] },
                { name: 'insert', items: ['Image', 'Table'] },
                { name: 'tools', items: ['Maximize'] },
                { name: 'styles', items: ['Format', 'FontSize'] }
            ]

        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
