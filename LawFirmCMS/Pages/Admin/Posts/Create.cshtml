@page
@model LawFirmCMS.Pages.Admin.Posts.CreateModel
@{
    Layout = "~/Pages/Admin/Shared/_AdminLayout.cshtml";
}
@{
    ViewData["Title"] = "Create";
    ViewData["NavigationPosts"] = "active";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div >
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Post.Content" class="control-label"></label>
                <textarea asp-for="Post.Content" class="form-control"></textarea>
                <span asp-validation-for="Post.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Post.PublishDate" class="control-label"></label>
                <input asp-for="Post.PublishDate" class="form-control" />
                <span asp-validation-for="Post.PublishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.EmployeeId" class="control-label"></label>
                <select asp-for="Post.EmployeeId" class ="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group form-check">
                <span class="text-danger">*</span>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Post.IsDeleted" /> @Html.DisplayNameFor(model => model.Post.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    <script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
    <script>
        console.log(CKEDITOR.version);
        CKEDITOR.replace('Post_Content', {
            height: 300,
            toolbar: [
                { name: 'basicstyles', items: ['Bold', 'Italic', 'Underline'] },
                { name: 'paragraph', items: ['NumberedList', 'BulletedList'] },
                { name: 'links', items: ['Link', 'Unlink'] },
                { name: 'insert', items: ['Image', 'Table'] },
                { name: 'tools', items: ['Maximize'] },
                { name: 'styles', items: ['Format', 'FontSize'] }
            ]

        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
