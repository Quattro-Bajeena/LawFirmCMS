@page
@model LawFirmCMS.Pages.Admin.JobOffers.EditModel
@{
    Layout = "~/Pages/Admin/Shared/_AdminLayout.cshtml";
}
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>JobOffer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobOffer.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="JobOffer.Position" class="control-label"></label>
                <input asp-for="JobOffer.Position" class="form-control" />
                <span asp-validation-for="JobOffer.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="JobOffer.Salary" class="control-label"></label>
                <input asp-for="JobOffer.Salary" class="form-control" />
                <span asp-validation-for="JobOffer.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="JobOffer.Description" class="control-label"></label>
                <input asp-for="JobOffer.Description" class="form-control" />
                <span asp-validation-for="JobOffer.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="JobOffer.Requirements" class="control-label"></label>
                <input asp-for="JobOffer.Requirements" class="form-control" />
                <span asp-validation-for="JobOffer.Requirements" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <span class="text-danger">*</span>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="JobOffer.IsDeleted" /> @Html.DisplayNameFor(model => model.JobOffer.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
